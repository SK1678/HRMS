<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Security Rules (if any specific beyond standard HR groups) -->
        <!-- We use the standard hr.group_hr_manager to access the upload wizard -->
        <!-- and standard hr.group_hr_user for logs. -->
        
        <record id="rule_import_log_company" model="ir.rule">
            <field name="name">Employee Import Log Multi-Company</field>
            <field name="model_id" ref="model_employee_bulk_import_log"/>
            <field name="domain_force">['|', ('create_uid.company_id', 'in', company_ids), ('create_uid', '=', False)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>
    </data>
</odoo>
