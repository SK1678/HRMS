<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Import Log Form View -->
        <record id="view_employee_bulk_import_log_form" model="ir.ui.view">
            <field name="name">employee.bulk.import.log.form</field>
            <field name="model">employee.bulk.import.log</field>
            <field name="arch" type="xml">
                <form string="Import Log" create="0" edit="0">
                    <header>
                        <button name="action_download_output" 
                                string="Download Passwords" 
                                type="object" 
                                class="btn-primary" 
                                invisible="not output_file"/>
                        <button name="action_download_errors" 
                                string="Download Errors" 
                                type="object" 
                                class="btn-secondary" 
                                invisible="not error_file"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="imported_count"/>
                                <field name="failed_count"/>
                            </group>
                            <group>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                            </group>
                        </group>
                        <group string="Log Summary">
                            <field name="summary" nolabel="1" widget="text"/>
                        </group>
                        <group invisible="1">
                            <field name="output_file" filename="output_filename"/>
                            <field name="output_filename"/>
                            <field name="error_file" filename="error_filename"/>
                            <field name="error_filename"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Import Log Tree View -->
        <record id="view_employee_bulk_import_log_tree" model="ir.ui.view">
            <field name="name">employee.bulk.import.log.tree</field>
            <field name="model">employee.bulk.import.log</field>
            <field name="arch" type="xml">
                <list string="Import Logs" create="0" edit="0" delete="0">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                    <field name="imported_count"/>
                    <field name="failed_count"/>
                </list>
            </field>
        </record>

        <!-- Import Log Action -->
        <record id="action_employee_bulk_import_log" model="ir.actions.act_window">
            <field name="name">Employee Bulk Import Logs</field>
            <field name="res_model">employee.bulk.import.log</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
